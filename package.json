{
    "name": "globi-web",
    "version": "0.0.1",
    "description": "GloBI Website",
    "directories": {
        "test": "test"
    },
    "browserify": {
        "transform": [
            "brfs"
        ]
    },

    "dependencies": {
        "globi-bundle": "0.0.1",
        "globi-wheel": "0.0.1",
        "globi-hairball": "0.0.1",
        "globi": "~0.0.51",
        "spin.js": "~2.3.2",
        "node-js-marker-clusterer": "~1.0.0",
        "jquery-ui": "1.10.5"
    },

    "devDependencies": {
        "tape": "~1.0.4",
        "browserify": "~11.0.1",
        "brfs": "~1.4.0"
    },

    "testling": {
        "files": "test/*.js"
    },

    "scripts": {
        "preinstall": "npm install node_modules/globi-bundle node_modules/globi-wheel node_modules/globi-hairball",
        "test": "testling",
        "test-browser": "browserify -t brfs test/*.js test/browser/*.js | testling",
        "build": "browserify -t brfs index.js --standalone globi-web -o static/globi-web.js",
        "watch": "watchify index.js --standalone globi-web -o static/globi-web.js --debug --verbose"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/globalbioticinteractions/globalbioticinteractions.github.io/"
    },
    "keywords": [
        "global",
        "biotic",
        "interactions",
        "species",
        "interactions",
        "bioinformatics"
    ],
    "author": "Jorrit Poelen",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/globalbioticinteractions/globalbioticinteractions.github.io/issues"
    },
    "homepage": "http://globalbioticinteractions.org"
}
